<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signin_gradiant_bg"
    tools:context="planet.it.limited.pepsigosmart.activities.ShowAllIputDataAct">

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/ic_banner"
        >

        <ImageView
            android:id="@+id/drawer_menuIcon"
            android:src="@drawable/ic_menu"
            android:clickable="true"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="02dp"
            android:layout_marginTop="0dp"
            />

        <TextView
            android:id="@+id/txv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginRight="58dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:textColor="#fff"
            />
        <TextView
            android:id="@+id/txv_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01XXXXXXXXX"
            android:layout_below="@+id/imgv_user"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="0dp"
            android:textColor="#fff"

            />



    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_td_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="75dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today:"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:textColor="#fff"
                />
            <TextView
                android:id="@+id/txv_today_no_rows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:textColor="#fff"
                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total:"
                android:textSize="20dp"
                android:textColor="#fff"
                />
            <TextView
                android:id="@+id/txv_no_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:layout_marginRight="10dp"
                android:textColor="#fff"
                />



        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/rl_td_total"
        >
        <HorizontalScrollView
            android:id="@+id/tabscrvie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            >
            <TableLayout
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin_basic_info"
        android:visibility="visible"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_back"
            android:textAllCaps="false"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="05dp"
            />


    </RelativeLayout>

</RelativeLayout>
