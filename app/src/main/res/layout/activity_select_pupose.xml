<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_in_bg"
    tools:context="planet.it.limited.pepsigosmart.activities.SelectPuposeAct">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/ic_banner_send_third" />

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">


        <ImageView
            android:id="@+id/imgv_user"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/ic_user" />

            <TextView
            android:id="@+id/txv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
                android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/imgv_user"
            android:text="User Name"
            android:textColor="#fff" />

            <TextView
            android:id="@+id/txv_user_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
                android:layout_marginTop="42dp"
            android:layout_toRightOf="@+id/imgv_user"
            android:text="017XXXXXXXX"
            android:textColor="#fff" />


            <ImageView
            android:id="@+id/imgv_logout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/ic_logout" />


        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="102dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/lin_sel_pur"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="48dp"
                android:orientation="vertical"
                android:background="@drawable/select_campaign"
                android:gravity="center">

                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:text="Select Your Campaign"-->
                    <!--android:textColor="#fff"-->
                    <!--android:textSize="23sp"-->

                    <!--/>-->
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/lin_market_visit"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@+id/lin_sel_pur"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="40dp"

                android:background="@drawable/ic_market_visit">

                <TextView
                    android:id="@+id/txv_market_visit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Market Visit"
                    android:textColor="#fff"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:layout_marginTop="03dp"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="0dp"
                        app:srcCompat="@drawable/ic_arrow_right"

                        />


                </RelativeLayout>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/lin_retail_initiative"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@+id/lin_market_visit"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"

                android:background="@drawable/ic_market_visit">

                <TextView
                    android:id="@+id/txv_retail_init"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="03dp"
                    android:layout_marginLeft="15dp"
                    android:text="Retail Initiative"
                    android:textColor="#fff"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="0dp"
                        app:srcCompat="@drawable/ic_arrow_right"

                        />


                </RelativeLayout>


            </RelativeLayout>

            <!--<Button-->
                <!--android:id="@+id/btn_sign_out"-->
                <!--android:layout_width="140dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_below="@+id/lin_retail_initiative"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:layout_marginBottom="10dp"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_marginRight="25dp"-->
                <!--android:layout_marginTop="60dp"-->
                <!--android:background="@drawable/rounded_btn_logout"-->
                <!--android:shadowColor="@android:color/transparent"-->
                <!--android:text="Logout"-->
                <!--android:textColor="#000" />-->

        </RelativeLayout>


    </LinearLayout>


    </FrameLayout>
</ScrollView>
