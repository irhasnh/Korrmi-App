<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#900083A7"
    android:alpha="211"
    >
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmation."
        android:padding="5dp"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_marginLeft="09dp"

        />

    <TextView
        android:id="@+id/dialog_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want export Data ?"
        android:padding="15dp"
        android:layout_below="@id/dialog_title"
        android:textColor="#fff"
        android:textSize="20sp"
        />
    <Button
        android:id="@+id/dialog_positive_btn"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="Yes"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_below="@id/dialog_tv"
        android:background="#fff"
        android:textColor="#000"
        android:layout_marginTop="05dp"
        />
    <Button
        android:id="@+id/dialog_negative_btn"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="No"
        android:layout_marginLeft="14dp"
        android:layout_below="@+id/dialog_tv"
        android:background="#fff"
        android:textColor="#000"
        android:layout_marginTop="05dp"
        />
</RelativeLayout>